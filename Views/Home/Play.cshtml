
@model myGameScore.Models.Score
@{
    ViewData["Title"] = "Lançar Pontos";
}

<div class="row mt-4">
    <div class="col-12 col-md-4 mb-4">
        <div class="list-group" id="list-tab-play" role="tablist">
            <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Home" asp-action="Play">Lançar Pontos</a>
            <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Home" asp-action="Result">Ver Resultados</a>
        </div>
    </div>
    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12">
                <form method="POST" id="form-score" action="https://localhost:44316/Home/SaveScorePoints">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="text-white">Lançar Pontos</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group align-items-center">
                                        <label for="scoreDate">Data do jogo</label>
                                        <input type="date" class="form-control" id="scoreDate" name="input_date" placeholder="">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group align-items-center">
                                        <label for="scorePoints">Quantos pontos você fez?</label>
                                        <input type="text" class="form-control" id="scorePoints" name="input_score" placeholder="" onkeypress="javascprit:validate(event)" maxlength="3">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6">
                                    <button type="button" class="btn btn-dark" id="btn-score" onclick="javascprit: savePointsScore();">Salvar</button>
                                </div>
                                <div class="col-6">
                                    <button type="button" class="btn btn-dark float-right" id="btn-scoredel" onclick="javascprit: deletePoints();">Excluir Resultados</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12" id="response-box">

            </div>
        </div>
    </div>
</div>
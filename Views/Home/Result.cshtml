
@{
    ViewData["Title"] = "Resultados";
    // Since Result isn't a string, it requires a cast.
    var result = ViewBag.gamesResult;
}

<div class="row mt-4">
    <div class="col-12 col-md-4 mb-4">
        <div class="list-group" id="list-tab-play" role="tablist">
            <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Home" asp-action="Play">Lançar Pontos</a>
            <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Home" asp-action="Result">Ver Resultados</a>
        </div>
    </div>
    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-dark">
                        <h3 class="text-white">Resultados<span class="float-right">@result.periodo</span></h3>
                    </div>
                    <div class="card-body">
                        @if (result.error == "")
                        {
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <td>Jogos disputados</td>
                                        <td class="text-right">@result.totalGames</td>
                                    </tr>
                                    <tr>
                                        <td>Total de pontos marcados na temporada</td>
                                        <td class="text-right">@result.totalPoints</td>
                                    </tr>
                                    <tr>
                                        <td>Média de pontos por jogo</td>
                                        <td class="text-right">@result.averagePoints.ToString("0.##")</td>
                                    </tr>
                                    <tr>
                                        <td>Maior pontuação em um jogo</td>
                                        <td class="text-right">@result.highestPoints</td>
                                    </tr>
                                    <tr>
                                        <td>Menor pontuação em um jogo</td>
                                        <td class="text-right">@result.lowestPoints</td>
                                    </tr>
                                    <tr>
                                        <td>Quantidade de vezes que bateu o proprio recorde</td>
                                        <td class="text-right">@result.recordsBeated</td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <h5>@result.error</h5>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
